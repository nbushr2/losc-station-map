	<headcode>
		<!-- Tabbed Dashboard Styling -->
		<style>
			.losc-dashboard {
				max-width: 1500px;
				margin: 0 auto;
			}
			
			/* Tab Buttons */
			.tab-buttons {
				display: flex;
				gap: 8px;
				margin-bottom: 0;
				border-bottom: 3px solid #461D7C;
				background: #f8f9fa;
				padding: 12px 12px 0 12px;
				border-radius: 8px 8px 0 0;
			}
			
			.tab-btn {
				background: white;
				border: 2px solid #ddd;
				border-bottom: none;
				padding: 12px 28px;
				font-size: 1.05rem;
				font-weight: 700;
				color: #666;
				cursor: pointer;
				border-radius: 6px 6px 0 0;
				transition: all 0.2s;
			}
			
			.tab-btn:hover {
				background: #f0f0f0;
				color: #461D7C;
			}
			
			.tab-btn.active {
				background: #461D7C;
				color: white;
				border-color: #461D7C;
				position: relative;
			}
			
			.tab-btn.active::after {
				content: '';
				position: absolute;
				bottom: -3px;
				left: 0;
				right: 0;
				height: 3px;
				background: #FDD023;
			}
			
			/* Tab Content */
			.tab-content {
				display: none;
				border: 2px solid #e0e0e0;
				border-top: none;
				border-radius: 0 0 8px 8px;
			}
			
			.tab-content.active {
				display: block;
			}
			
			.tab-content iframe {
				width: 100%;
				border: 0;
				display: block;
			}
			
			/* Info Box */
			.info-tip {
				margin-top: 15px;
				padding: 12px 18px;
				border-radius: 6px;
				font-size: 0.95rem;
			}
			
			.info-tip.map-tip {
				background: #e8f5e9;
				border-left: 4px solid #4caf50;
			}
			
			.info-tip.table-tip {
				background: #e3f2fd;
				border-left: 4px solid #2196f3;
			}
			
			@media (max-width: 768px) {
				.tab-buttons {
					flex-direction: column;
					gap: 0;
				}
				.tab-btn {
					border-radius: 0;
					border: none;
					border-bottom: 1px solid #ddd;
				}
				.tab-btn.active::after {
					width: 4px;
					height: 100%;
					left: 0;
					top: 0;
					bottom: auto;
				}
			}
		</style>
	</headcode>
	
	<bodycode></bodycode>
	
	<footcode>
		<!-- Tab Switching Script -->
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const tabs = document.querySelectorAll('.tab-btn');
				const contents = document.querySelectorAll('.tab-content');
				const tips = document.querySelectorAll('.info-tip');
				
				tabs.forEach((tab, index) => {
					tab.addEventListener('click', function() {
						// Remove active from all
						tabs.forEach(t => t.classList.remove('active'));
						contents.forEach(c => c.classList.remove('active'));
						tips.forEach(t => t.style.display = 'none');
						
						// Add active to clicked
						tab.classList.add('active');
						contents[index].classList.add('active');
						if (tips[index]) tips[index].style.display = 'block';
					});
				});
			});
		</script>
	</footcode>
	
